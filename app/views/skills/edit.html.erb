<h1>Editing Skill #<%= @skill.id %></h1>


<%= form_tag(skill_url(@skill), method: 'put') do %>

  <div>
    <%= label_tag :task %><br />
    <%= text_area_tag :task, @skill.task %>
  </div>

  <div>
    <%= label_tag :user_id %><br />
    <%= text_field_tag :user_id, @skill.user_id %>
  </div>

  
  <div>
    <%= submit_tag "Update Skill" %>
  </div>

<% end %>
